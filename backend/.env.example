# Database – PostgreSQL (Railway/local Docker/Neon)
# Railway: use DATABASE_URL from Postgres plugin
# Local: Docker → docker run -e POSTGRES_PASSWORD=postgres -p 5432:5432 postgres:16-alpine
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/isp?schema=public"

JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
PORT=4000

# MikroTik (for Sync / Block / Unblock – leave empty if not used)
MIKROTIK_HOST=192.168.88.1
MIKROTIK_USER=admin
MIKROTIK_PASSWORD=
MIKROTIK_PPPOE_POOL=pppoe-pool
MIKROTIK_PPPOE_PROFILE=default

# SMS Gateway (e.g. SSL Wireless – leave empty to skip SMS)
SMS_API_URL=
SMS_API_KEY=
SMS_SENDER_ID=

# Payment (bKash/Nagad/Rocket – stub only; add real keys for production)
BKASH_APP_KEY=
BKASH_APP_SECRET=
NAGAD_MERCHANT_ID=
ROCKET_API_KEY=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
